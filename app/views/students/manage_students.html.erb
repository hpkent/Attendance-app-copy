<div class="container-fluid">
    <div class="row col-xs-12">
        <div id= "links" class="actions">
          <div>
            <%= button_to('New Student', new_student_path, :class => 'btn  btn-primary pull-right btn-padded')  %>
          </div>
        </div>

    </div>

    <div class="row col-xs-12">
      <table class="table table-hover table-condensed">
        <thead>
            <tr class="noborder">
                <th colspan="5"><h3>Manage students</h3></th>
            </tr>
            <tr>
                <th>Student Name</th>
                <th>Category</th>
                <th>Show</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
          <% @students.each do |student| %>
            <tr> 
              <td id="name">
                <% if student.last_name != nil %>
                  <%=student.first_name + " " + student.last_name%>
                <%else %>
                  <%=student.first_name%>
                <%end%>
              </td>
              <td><%=student.category_type.name%>
              </td>
              <td><%= link_to 'Show', student_path(student) %>
              </td>
              <td><%= link_to 'Edit', edit_student_path(student) %>
              </td>
              <td><%= link_to 'Delete', student_path(student),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
              </td>
            </tr>
          <%end%>
      </table>    
    </div>
</div>
